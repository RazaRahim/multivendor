<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_user12"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/imagess"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/cart_item_name"
                android:layout_marginTop="25dp"
                android:text="Name"
                android:layout_toRightOf="@+id/imagess"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_del_cart"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_margin="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:"
                android:id="@+id/fg"
                android:layout_toRightOf="@+id/imagess"
                android:layout_below="@+id/cart_item_name"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:id="@+id/cart_item_quantity"
                android:layout_toRightOf="@+id/fg"
                android:layout_below="@+id/cart_item_name"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:id="@+id/gh"
                android:layout_toRightOf="@+id/imagess"
                android:layout_below="@+id/fg"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs"
                android:id="@+id/cart_item_price"
                android:textColor="@android:color/darker_gray"
                android:layout_toRightOf="@+id/gh"
                android:layout_below="@+id/fg"
                android:layout_marginLeft="10dp"
                />
            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/cart_number_button"
                android:layout_alignParentRight="true"
                app:textSize="8dp"
                app:backGroundColor="@color/colorAccent"
                app:initialNumber="1"
                app:finalNumber="20"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Update"
                android:textSize="10dp"
                android:background="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:layout_marginRight="5dp"
                android:id="@+id/updatebtn"
                />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>